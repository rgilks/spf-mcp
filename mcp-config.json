{
  "name": "savage-pathfinder",
  "version": "1.0.0",
  "description": "Savage Pathfinder MCP Server for AI-powered tabletop gaming",
  "server": {
    "command": "npm",
    "args": ["run", "mcp"],
    "env": {
      "NODE_ENV": "production",
      "JWT_SECRET": "your-jwt-secret-here",
      "API_KEY": "your-api-key-here"
    }
  },
  "capabilities": {
    "tools": true,
    "resources": true
  },
  "deployment": {
    "url": "https://spf-mcp.rob-gilks.workers.dev",
    "type": "cloudflare-workers"
  }
}
