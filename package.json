{
  "name": "spf-mcp",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "mcp": "tsx src/mcp-server.ts",
    "mcp:dev": "tsx --watch src/mcp-server.ts",
    "demo": "node demo.js",
    "demo:live": "node demo.js --live",
    "check": "tsc -p tsconfig.json --noEmit",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 execute spf_db --file ./schema.sql",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run check && npm run test && npm run format:check"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "hono": "^4.9.8",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
